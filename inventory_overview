<body>
    <div class="container">
        <h1>Inventory Overview</h1>
        <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search product..." onkeyup="filterTable()">
        </div>
        <table id="inventoryTable">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                <!-- to be rendered dynamically -->
            </tbody>
        </table>
        <div class="actions">
            <button onclick="viewProduct()">View</button>
            <button onclick="updateProduct()">Update</button>
        </div>
    </div>
    <script>
        const products = [
            { code: '654001', name: 'Denim Jacket', quantity: 80 },
            { code: '654002', name: 'Leather Wallet', quantity: 50 },
            { code: '654003', name: 'Running Shoes', quantity: 50 },
            { code: '654004', name: 'Sports Watch', quantity: 30 },
            { code: '654005', name: 'T-shirt', quantity: 200 },
            { code: '654006', name: 'Handbag', quantity: 50 },
            { code: '654007', name: 'Polo Shirt', quantity: 100 },
            { code: '654008', name: 'Skinny Jeans', quantity: 75 },
            { code: '654009', name: 'Dresses', quantity: 50 },
            { code: '654010', name: 'Long Skirt', quantity: 50 }
        ];

        let selectedRow = null;

        function renderTable(filter = '') {
            const tbody = document.querySelector('#inventoryTable tbody');
            tbody.innerHTML = '';
            products.forEach((p, idx) => {
                if (
                    p.code.toLowerCase().includes(filter) ||
                    p.name.toLowerCase().includes(filter)
                ) {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td>${p.code}</td>
                        <td>${p.name}</td>
                        <td>${p.quantity}</td>
                    `;
                    tr.onclick = () => selectRow(tr, idx);
                    tbody.appendChild(tr);
                }
            });
        }

        function filterTable() {
            const input = document.getElementById('searchInput').value.toLowerCase();
            renderTable(input);
            selectedRow = null;
            clearSelection();
        }

        function selectRow(row, idx) {
            clearSelection();
            row.classList.add('selected');
            selectedRow = idx;
        }

        function clearSelection() {
            document.querySelectorAll('#inventoryTable tbody tr').forEach(tr => {
                tr.classList.remove('selected');
            });
        }

        function viewProduct() {
            if (selectedRow === null) {
                alert('Please select a product to view.');
                return;
            }
            const p = products[selectedRow];
            alert(`Code: ${p.code}\nName: ${p.name}\nQuantity: ${p.quantity}`);
        }

        function updateProduct() {
            if (selectedRow === null) {
                alert('Please select a product to update.');
                return;
            }
            const p = products[selectedRow];
            alert(`Update product: ${p.name} (to be implemented)`);
        }

        renderTable();
    </script>
</body>
